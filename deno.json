{
  "name": "@cong/sendgrid-mcp",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server for sending emails via SendGrid API",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/sendgrid-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/sendgrid-mcp/issues"
  },
  "homepage": "https://github.com/your-username/sendgrid-mcp#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "sendgrid",
    "email",
    "deno",
    "typescript"
  ],
  "exports": {
    ".": "./main.ts"
  },
  "tasks": {
    "dev": "deno run --allow-env --allow-net --allow-read --watch main.ts",
    "test": "deno test --allow-env --allow-net --allow-read",
    "start": "deno run --allow-env --allow-net --allow-read main.ts",
    "publish:check": "deno publish --dry-run",
    "publish": "deno publish"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/dotenv": "jsr:@std/dotenv@0.225",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@1.0.0",
    "@sendgrid/mail": "npm:@sendgrid/mail@8.1.3",
    "zod": "npm:zod@3.23.8",
    "dompurify": "npm:isomorphic-dompurify@2.16.0"
  },
  "compilerOptions": {
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true
  }
}
